document.addEventListener("DOMContentLoaded", onkoKirjautunut);

function onkoKirjautunut() {
    if (localStorage.getItem("kirjautunut") === "kylla") {
        document.getElementById("tervetuloa_teksti").textContent += localStorage.getItem("nimi");
    }
}

function kirjaudu() {
    let nimi = document.getElementById("nimi").value;
    if (nimi) {  // Tarkistetaan, että nimi ei ole tyhjä
        localStorage.setItem("nimi", nimi);
        localStorage.setItem("kirjautunut", "kylla");
        document.getElementById("tervetuloa_teksti").textContent += nimi;  // Päivitetään tervetuloteksti myös heti kirjautumisen yhteydessä
    } else {
        alert("Syötä nimesi ennen kirjautumista.");  // Annetaan käyttäjälle ilmoitus, jos nimi on tyhjä
    }
}